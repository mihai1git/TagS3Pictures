<Configuration status="WARN">
 <Appenders>
  <Console name="ConsoleAppender" target="SYSTEM_OUT">
   <PatternLayout pattern="%c{2}:%L - %m%n" />
  </Console>
 </Appenders>

 <Loggers>
  <Root level="DEBUG">
   <AppenderRef ref="ConsoleAppender"/>
  </Root>
  <Logger name="com.amazonaws" level="DEBUG" />
 </Loggers>
</Configuration>